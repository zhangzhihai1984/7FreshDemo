<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/address_layout"
            layout="@layout/order_address_layout" />

        <include layout="@layout/order_store_layout" />

        <include
            android:id="@+id/delivery_layout"
            layout="@layout/order_delivery_layout" />

        <include
            android:id="@+id/product_layout"
            layout="@layout/order_product_layout" />

        <include layout="@layout/order_price_layout" />

        <include
            android:id="@+id/coupon_layout"
            layout="@layout/order_coupon_layout" />

        <include
            android:id="@+id/stockout_layout"
            layout="@layout/order_stockout_layout" />

    </LinearLayout>

</ScrollView>